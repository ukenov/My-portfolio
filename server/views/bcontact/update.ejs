<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  
<!-- content for the Update Page -->
<div class="black-container">
  <main class="container">
    <div class="jumbotron">
        <div class="bcontacts-container">
            <h1 class="text-center"><%= title %></h1>

            <form class="contact-form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter name"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Phone number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter phone number"
                    name="number" 
                    value="<%= contact.number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter email"
                    name="email" 
                    value="<%= contact.email %>"
                    required>
                </div>

                <button class="btn btn-outline-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                <a href="/bcontact-list" class="btn btn-outline-danger">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
  </main>
</div>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>